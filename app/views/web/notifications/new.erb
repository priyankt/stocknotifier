<% content_for :title do %>
  <title>New Message</title>
<% end %>
<div class="row page-notifications-new">
    <div class="span12">
        <h3>New Message</h3>
        <hr/>
    </div>
    <div class="span12">
        <label><strong>Message Title</strong></label>
        <input id="title" class="span12" type="text" placeholder="Enter message title here"></input>
    </div>
    <div class="span12">
        <%= partial 'web/wysiwyg' %>
        <div id="editor" contenteditable="true">
            Enter your message here..
        </div>
    </div>
    <div class="span12">
        <span class="spacer20"></span>
        <div id="datetimepicker" class="input-append">
            <input id="dttm" type="text" placeholder="Schedule Time"></input>
            <span class="add-on">
                <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
            </span>
        </div>
        <span class="pull-right"><a id="sendMessage" class="btn btn-danger">Send Message</a></span>
    </div>
</div>

<% content_for :js do %>
    <%= javascript_include_tag 'bootstrap-wysiwyg' %>
    <%= javascript_include_tag 'bootstrap-datetimepicker.min' %>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#editor').wysiwyg();

            $('#sendMessage').click(function() {
                var t = $('#editor').html();
                var htmlText = $.trim(t);
                console.log(htmlText);
                var title = $('#title').val();
                
                if(htmlText.length <= 0 || htmlText == '<br>' || title.length <= 0) {
                    alert("Please enter Title and Message.");
                    return false;
                }

                if(confirm("Are you sure you want to send this message?")) {
                    
                    $.ajax({
                        type: "POST",
                        url: "/notifications/new",
                        dataType: 'json',
                        data: { text: htmlText, dttm: $('#dttm').val(), title: title }
                    })
                    .done(function( msg ) {
                        alert( "Data Saved: " + msg );
                    })
                    .fail(function() { 
                        alert("Error occured while sending message. Please contact support."); 
                    });
                }
            });

            $('#datetimepicker').datetimepicker({
                language: 'en',
                pickSeconds: false,
                format: 'dd/MM/yyyy @ hh:mm',
                //startDate:
            });
        });
    </script>
<% end %>